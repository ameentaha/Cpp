//Write a C++ program to find the size of int, char, float, double.

#include <iostream>
using namespace std;
int main()
{
    char p;
    int q;
    float r;
    double s;
    
    cout<<"Size of char: "<<sizeof(p)<<"bytes";
    cout<<"\nSize of int: "<<sizeof(q)<<"bytes";
    cout<<"\nSize of float: "<<sizeof(r)<<"bytes";
    cout<<"\nSize of double: "<<sizeof(s)<<"bytes";

    return 0;
}

//Write a C++ program to find the product of two numbers entered by the user.

#include <iostream>
using namespace std;
int main()
{
    int p,q,r;
    cout<<"Enter two numbers: ";
    cin>>p>>q;
    
    r = p*q;
    cout<<"\nThe product is: "<<r;
    
    return 0;
}
